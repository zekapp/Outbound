<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FrameworkRoot.Theme" parent="android:Theme.Holo.Light.DarkActionBar" />
    <style name="FrameworkRoot.ActionBar" parent="android:Widget.Holo.ActionBar" />
    <style name="FrameworkRoot.ActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title" />

    <!-- Base application theme. -->
    <style name="Theme.Outbound" parent="FrameworkRoot.Theme">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Base</item>
        <item name="android:colorBackground">@color/background_body</item>

    </style>

    <style name="Theme.Outbound.Welcome">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/bg_landing</item>
    </style>

    <style name="Theme.Outbound.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBar.Base" parent="FrameworkRoot.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:customNavigationLayout">@layout/custom_ab_title</item>
    </style>

    <style name="ActionBar.TitleText" parent="FrameworkRoot.ActionBar.TitleText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>



</resources>
