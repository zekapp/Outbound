<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/outbound_list_view_item_height_ext"
    android:orientation="horizontal">

    <!--<com.parse.ParseImageView-->
        <!--android:id="@+id/pm_user_photo"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/white_rounded_rectangle"-->
        <!--android:layout_marginLeft="@dimen/outbound_list_view_item_picture_left_margin"-->
        <!--android:layout_marginTop="@dimen/outbound_list_view_item_picture_top_margin"/>-->
    <com.outbound.ui.util.RoundedImageView
        android:id="@+id/pm_user_photo"
        android:layout_width="@dimen/list_picture_width"
        android:layout_height="@dimen/list_picture_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/list_picture_left_margin"
        android:scaleType="fitXY"
        app:corner_radius="@dimen/list_picture_radius"
        app:border_width="@dimen/list_picture_border_width"
        app:oval="false"
        app:border_color="@color/list_picture_border_color"
        android:background="@drawable/white_rounded_rectangle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/outbound_list_view_item_height_without_picture"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/outbound_list_view_item_text_left_margin">

        <TextView
            android:id="@+id/mt_name_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Surname"
            android:drawableLeft="@drawable/test_flag"
            android:drawablePadding="7dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mt_date"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="20/9/2015 to 30/9/2015"
                android:drawableLeft="@drawable/small_calander"
                android:drawablePadding="7dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
