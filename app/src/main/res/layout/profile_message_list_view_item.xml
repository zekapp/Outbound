<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/outbound_list_view_item_height"
    android:orientation="horizontal">

    <com.outbound.ui.util.RoundedImageView
        android:id="@+id/pm_user_photo"
        android:layout_width="@dimen/list_picture_width"
        android:layout_height="@dimen/list_picture_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/list_picture_left_margin"
        android:scaleType="fitXY"
        app:corner_radius="@dimen/list_picture_radius"
        app:border_width="@dimen/list_picture_border_width"
        app:oval="false"
        app:border_color="@color/list_picture_border_color"
        android:background="@drawable/white_rounded_rectangle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pm_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Surname"
                android:layout_marginLeft="@dimen/outbound_list_view_item_text_left_margin"
                android:layout_marginTop="@dimen/outbound_list_view_item_text_top_margin"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/pm_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="12:05 PM"
                android:layout_marginTop="@dimen/outbound_list_view_item_text_top_margin"
                android:layout_marginRight="@dimen/outbound_list_view_item_text_right_margin"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/pm_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:hint="@string/test_message_very_short"
            android:layout_marginLeft="@dimen/outbound_list_view_item_text_left_margin"
            android:layout_marginRight="@dimen/outbound_list_view_item_text_right_margin"
            android:paddingTop="10dp"/>

    </LinearLayout>



</LinearLayout>