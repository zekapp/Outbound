<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/theme_primary_grey"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/explore_trips_information"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/et_explore_trips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_explore_trips"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/et_add_new_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_add_new_trip"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
</LinearLayout>