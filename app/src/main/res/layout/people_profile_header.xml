<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:parallax="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_pager_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_pager_layout_height">

        <com.outbound.ui.util.ParallaxParseImageView
            android:id="@+id/pp_coverPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_profile_cover"
            android:scaleType="fitXY"
            parallax:tiltSensitivity="0.5"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/profile_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="147dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/profile_left_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_clear_dot"
                android:padding="5dp"
                />
            <ImageView
                android:id="@+id/profile_right_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_clear_dot"
                android:padding="5dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_container_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/people_profile_layout_container"/>
    </LinearLayout>
</LinearLayout>