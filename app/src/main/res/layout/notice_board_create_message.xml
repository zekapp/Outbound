    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="COUNTRY"
        android:textStyle="bold"
        android:paddingLeft="54dp"
        android:layout_marginTop="10dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_country"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <Button
            style="?android:attr/spinnerStyle"
            android:id="@+id/cm_country_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:paddingLeft="12dip"
            android:hint="Select"
            android:textSize="15sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CITY"
        android:textStyle="bold"
        android:paddingLeft="54dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_hometown"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <Button
            style="?android:attr/spinnerStyle"
            android:id="@+id/cm_city_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:hint="Select"
            android:textSize="15sp"
            android:paddingLeft="12dip"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_hometown"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <EditText
            android:id="@+id/cm_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:hint="Place"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TRAVELLER TYPE"
        android:textStyle="bold"
        android:paddingLeft="54dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_country"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <Button
            style="?android:attr/spinnerStyle"
            android:id="@+id/cm_traveller_type_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:hint="All"
            android:textSize="15sp"
            android:paddingLeft="12dip"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_new_post"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <EditText
            android:id="@+id/s_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Notice title"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_new_post"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <EditText
            android:id="@+id/s_message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Type message"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"/>

    </LinearLayout>


</LinearLayout>