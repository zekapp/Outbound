<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="COUNTRY"
        android:paddingLeft="47dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_country"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <Button
            style="?android:attr/spinnerStyle"
            android:id="@+id/es_country_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:hint="Select"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CITY"
        android:paddingLeft="47dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_hometown"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <Button
            style="?android:attr/spinnerStyle"
            android:id="@+id/es_city_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:hint="Select"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_hometown"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <EditText
            android:id="@+id/es_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="9sp"
            android:layout_marginRight="@dimen/text_right_margin"
            android:textSize="16sp"
            android:hint="Place"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DATE"
        android:paddingLeft="47dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_event"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <Button
            style="?android:attr/spinnerStyle"
            android:id="@+id/es_event_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:hint="Select"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PROXIMITY"
        android:paddingLeft="47dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_hometown"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_left"/>
        <Button
            style="?android:attr/spinnerStyle"
            android:id="@+id/es_proximitiy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_left_margin"
            android:layout_marginRight="@dimen/text_right_margin"
            android:hint="Select"
            />
    </LinearLayout>
</LinearLayout>